# Production Environment Variables Template
# Copy this file to .env and fill in the actual values
# NEVER commit the actual .env file to version control

# ============================================
# CRITICAL SECURITY SETTINGS
# ============================================

# Django Secret Key (REQUIRED)
# Generate a new secret key for production:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-production-key-here-minimum-50-characters

# Debug Mode (REQUIRED - must be False in production)
DEBUG=False

# Allowed Hosts (REQUIRED)
# Comma-separated list of domains that can serve this application
ALLOWED_HOSTS=hocvienphatgiaonamtong.vn,www.hocvienphatgiaonamtong.vn

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/hvpgntk_prod

# ============================================
# CORS SETTINGS
# ============================================

# Frontend domains allowed to access the API
CORS_ALLOWED_ORIGINS=https://hocvienphatgiaonamtong.vn

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

# Email backend for sending notifications
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password

# ============================================
# CLOUDINARY / MEDIA STORAGE (Optional)
# ============================================

# For file uploads (photos, documents)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# MONITORING & LOGGING (Optional)
# ============================================

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
